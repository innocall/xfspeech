<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/recycler_chinese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_red"
            android:gravity="center"
            android:text="@string/title_chinese"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_top_7"
            android:background="@drawable/msg_back"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chinese_start_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="吃饭吗诶呀？"
                android:textColor="#aaaaaa"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/main_top_7"
                android:layout_marginRight="@dimen/main_top_7"
                android:background="#dedcdc"></View>

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp">

            <TextView
                android:id="@+id/chinese_end_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="吃饭吗诶呀？"
                android:layout_marginRight="35dp"
                android:textColor="#aaaaaa"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/chinese_tts"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/volume_high"/>

        </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recycler_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/main_top_7"
            android:layout_weight="1"
            android:background="@drawable/msg_back"
            android:orientation="vertical">

            <TextView
                android:id="@+id/english_start_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="吃饭吗诶呀？"
                android:textColor="#aaaaaa"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/main_top_7"
                android:layout_marginRight="@dimen/main_top_7"
                android:background="#dedcdc"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp">

                <TextView
                    android:id="@+id/english_end_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="吃饭吗诶呀？"
                    android:layout_marginRight="35dp"
                    android:textColor="#aaaaaa"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/english_tts"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/volume_high"/>

            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_blue"
            android:gravity="center"
            android:text="@string/title_englist"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>